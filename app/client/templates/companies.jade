script(type="text/x-handlebars", data-template-name="companies")
  h3
    | Companies
  {{#linkTo 'companies.new' }}create{{/linkTo}}
  {{#each company in controller}}
  {{#unless company.isNew}}
  .tribute-company
    {{#linkTo 'company.show' company}}{{company.name}}{{/linkTo}}
  {{/unless}}
  {{/each}}
  #company-detail
    {{outlet}}


script(type="text/x-handlebars", data-template-name="company")
  h4
    | {{name}}
  h5
    | Teams
  {{#each team in teams}}
  {{team.name}}
  {{/each}}

script(type="text/x-handlebars", data-template-name="companies/new")
  legend
    | Create Company
  form
    .form-element
      label
        | Company Name
      .form-input
        {{ view Ember.TextField valueBinding="name" }}
    .form-element
      label
        | Description
      .form-input
        {{ view Ember.TextField valueBinding="description" }}
    .form-element
      label
        | Homepage
      .form-input
        {{ view Ember.TextField valueBinding="uri" type='url' }}
    .actions
      <button {{ action cancel }}>Cancel</button>
      <button {{ action save }}>Create</button>
