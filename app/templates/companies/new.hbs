#tribute-new-company-form.ui.fluid.form.segment
  h3.ui.header
    | Register Company
  .field
    .ui.left.labeled.icon.input
      label Company Name
      Ember.TextField elementId="companyNameInput" valueBinding="name" placeholder="Company Name"
  .field
    .ui.left.labeled.icon.input
      label Description
      Ember.TextArea elementId="companyDescriptionInput" valueBinding="description" placeholder="Description"
  .field
    .ui.left.labeled.icon.input
      label Homepage URL
      view Ember.TextField elementId="companyURLInput" valueBinding="uri" type="url" placeholder="Company Homepage URL"
  .ui.horizontal.divider
  .actions.ui.buttons
    #cancel-button.ui.button{ action cancel } Cancel
    .or
    #save-button.ui.positive.button{ action save } Save
