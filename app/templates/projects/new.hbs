#tribute-new-project-form.ui.fluid.form.segment
  h3.ui.header
    | Register Project with Tribute
  .field
    .ui.left.labeled.icon.input
      label Project Name
      Ember.TextField elementId="projectNameInput" valueBinding="name" placeholder="Project Name" required="required"
  .field
    .ui.left.labeled.icon.input
      label Description
      Ember.TextArea elementId="projectDescriptionInput" valueBinding="description" placeholder="Description"
  .field
    .ui.left.labeled.icon.input
      label Project GitHub URL
      Ember.TextField elementId="projectURLInput" valueBinding="uri" type="url" placeholder="Project Github URL" required="required"
  .ui.horizontal.divider
  .actions.ui.buttons
    #cancel-button.ui.button{ action 'cancel' }
      | Cancel
    .or
    #save-button.ui.positive.button{ action 'save' }
      | Save
