.ui.fluid.form.segment
  h3.ui.header
    | Register Project with Tribute
  .field
    .ui.left.labeled.icon.input
      label Project Name
      Ember.TextField valueBinding="name" placeholder="Project Name" required="required"
  .field
    .ui.left.labeled.icon.input
      label Description
      Ember.TextArea valueBinding="description" placeholder="Description"
  .field
    .ui.left.labeled.icon.input
      label Project GitHub URL
      Ember.TextField valueBinding="uri" type="url" placeholder="Project Github URL" required="required"
  .ui.horizontal.divider
  .actions.ui.buttons
    .ui.button{ action cancel }
      | Cancel
    .or
    .ui.positive.button{ action save }
      | Save
